<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Number: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
	     	android:textAppearance="@style/labelTextApp"
	     	android:layout_marginTop="10dip"
		/>
		<TextView android:id="@+id/summaryNumber" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="fill_parent"
   	 		android:textAppearance="@style/textApp"
   	 		android:gravity="right"
   	 		android:layout_marginTop="10dip"
		/>
	</LinearLayout>
	<ImageView
    	android:src="@android:drawable/divider_horizontal_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    	android:background="@drawable/divider_light"
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Type: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
   	     	android:textAppearance="@style/labelTextApp"
   	     	android:layout_marginTop="10dip"
		/>
		<TextView android:id="@+id/summaryType" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="fill_parent"
   	 		android:textAppearance="@style/textApp"
   	 		android:gravity="right"
   	 		android:layout_marginTop="10dip"
		/>
	</LinearLayout>
	<ImageView
    	android:src="@android:drawable/divider_horizontal_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    	android:background="@drawable/divider_light"
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Bound: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
	     	android:textAppearance="@style/labelTextApp"
	     	android:layout_marginTop="10dip"
		/>
		<TextView android:id="@+id/summaryBound" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="fill_parent"
	     	android:textAppearance="@style/textApp"
	     	android:gravity="right"
	     	android:layout_marginTop="10dip"
		/>
	</LinearLayout>
	<ImageView
    	android:src="@android:drawable/divider_horizontal_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    	android:background="@drawable/divider_light"
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Days of Operation: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
	     	android:textAppearance="@style/labelTextApp"
	     	android:layout_marginTop="10dip"	     	
		/>
		<TextView android:id="@+id/summaryDay" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="fill_parent"
	     	android:textAppearance="@style/textApp"
	     	android:gravity="right"
	     	android:layout_marginTop="10dip"
		/>
	</LinearLayout>
    <ImageView
    	android:src="@android:drawable/divider_horizontal_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    	android:background="@drawable/divider_light"
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Departure Station: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
	     	android:textAppearance="@style/labelTextApp"
	     	android:layout_marginTop="10dip"
		/>
		<TextView android:id="@+id/summaryDepStation" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="wrap_content"
   		 	android:layout_weight="2"
	     	android:textAppearance="@style/textApp"
	     	android:gravity="right"
	     	android:layout_marginTop="10dip"
		/>
		<ImageView android:id="@+id/summaryDepStationAddr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="15px"
			android:maxHeight="15px"
			android:background="@drawable/gmap"
		/>
	</LinearLayout>
	<ImageView
    	android:src="@android:drawable/divider_horizontal_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:paddingBottom="2dp"
    	android:paddingTop="2dp" 
    	android:background="@drawable/divider_light"
    />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<TextView 
	    	android:text="Arrival Station: " 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"
	     	android:textAppearance="@style/labelTextApp"
	     	android:layout_marginTop="10dip"
		/>
		<TextView android:id="@+id/summaryArrStation" 
   		 	android:layout_height="wrap_content" 
   		 	android:layout_width="wrap_content"
   		 	android:layout_weight="2"
   		 	android:textAppearance="@style/textApp"
	     	android:gravity="right"
	     	android:layout_marginTop="10dip"
		/>
		<ImageView android:id="@+id/summaryArrStationAddr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="15px"
			android:maxHeight="15px"
			android:background="@drawable/gmap"
		/>
	</LinearLayout>
	<Button
     	android:id="@+id/summaryBackButton"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:textAppearance="@style/textApp"
     	android:text="@string/back"
    />
</LinearLayout>
